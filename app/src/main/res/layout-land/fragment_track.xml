<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_fragmenttrackFrameLayout"
    tools:context=".FragmentTrack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0dp"
        android:id="@+id/id_fragmenttrack">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="7">

            <TableLayout
                android:id="@+id/id_tableLayout_TrackName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="4"
                android:background="@drawable/rounded_corner"
                android:paddingTop="0dp"
                android:paddingBottom="0dp">

                <TextView
                    android:id="@+id/id_textView_TrackName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearanceLargeNumbers"
                    android:textColor="@color/colorPrimaryLight"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/id_textView_TrackIDLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="13sp" />
            </TableLayout>

            <TableLayout
                android:id="@+id/id_tableLayout_Distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:paddingTop="0dp"
                android:paddingBottom="0dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/id_textView_Distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:freezesText="true"
                        android:gravity="center_horizontal"
                        android:textAppearance="@style/TextAppearanceLargeNumbers"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id_textView_DistanceUM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="0"
                        android:textAppearance="@style/TextAppearanceLargeUM" />
                </TableRow>

                <TextView
                    android:id="@+id/id_textView_DistanceLabel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/distance"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="13sp" />
            </TableLayout>

            <TableLayout
                android:id="@+id/id_tableLayout_SpeedMax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:paddingTop="0dp"
                android:paddingBottom="0dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/id_textView_SpeedMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:freezesText="true"
                        android:gravity="center_horizontal"
                        android:textAppearance="@style/TextAppearanceLargeNumbers"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id_textView_SpeedMaxUM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="0"
                        android:textAppearance="@style/TextAppearanceLargeUM" />
                </TableRow>

                <TextView
                    android:id="@+id/id_textView_SpeedMaxLabel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/max_speed"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="13sp" />
            </TableLayout>

            <TableLayout
                android:id="@+id/id_tableLayout_SpeedAvg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:paddingTop="0dp"
                android:paddingBottom="0dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/id_textView_SpeedAvg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:freezesText="true"
                        android:gravity="center_horizontal"
                        android:textAppearance="@style/TextAppearanceLargeNumbers"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id_textView_SpeedAvgUM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="0"
                        android:textAppearance="@style/TextAppearanceLargeUM" />
                </TableRow>

                <TextView
                    android:id="@+id/id_textView_SpeedAvgLabel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/average_speed"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="13sp" />
            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="7">

            <TableLayout
                android:id="@+id/id_tableLayout_AltitudeMin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:paddingTop="0dp"
                android:paddingBottom="0dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/id_textView_AltitudeMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:freezesText="true"
                        android:gravity="center_horizontal"
                        android:textAppearance="@style/TextAppearanceLargeNumbers"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id_textView_AltitudeMinUM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="0"
                        android:textAppearance="@style/TextAppearanceLargeUM" />
                </TableRow>

                <TextView
                    android:id="@+id/id_textView_AltitudeMinLabel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/altitude_min"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="13sp" />
            </TableLayout>

            <TableLayout
                android:id="@+id/id_tableLayout_AltitudeMax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:paddingTop="0dp"
                android:paddingBottom="0dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/id_textView_AltitudeMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:freezesText="true"
                        android:gravity="center_horizontal"
                        android:textAppearance="@style/TextAppearanceLargeNumbers"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id_textView_AltitudeMaxUM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="0"
                        android:textAppearance="@style/TextAppearanceLargeUM" />
                </TableRow>

                <TextView
                    android:id="@+id/id_textView_AltitudeMaxLabel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/altitude_max"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="13sp" />
            </TableLayout>

            <TableLayout
                android:id="@+id/id_tableLayout_AltitudeGap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:paddingTop="0dp"
                android:paddingBottom="0dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/id_textView_AltitudeGap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:freezesText="true"
                        android:gravity="center_horizontal"
                        android:textAppearance="@style/TextAppearanceLargeNumbers"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id_textView_AltitudeGapUM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="0"
                        android:textAppearance="@style/TextAppearanceLargeUM" />
                </TableRow>

                <TextView
                    android:id="@+id/id_textView_AltitudeGapLabel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/altitude_gap"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="13sp" />
            </TableLayout>

            <TableLayout
                android:id="@+id/id_tableLayout_AltitudeUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:paddingTop="0dp"
                android:paddingBottom="0dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/id_textView_AltitudeUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:freezesText="true"
                        android:gravity="center_horizontal"
                        android:textAppearance="@style/TextAppearanceLargeNumbers"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id_textView_AltitudeUpUM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="0"
                        android:textAppearance="@style/TextAppearanceLargeUM" />
                </TableRow>

                <TextView
                    android:id="@+id/id_textView_AltitudeUpLabel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/altitude_up"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="13sp" />
            </TableLayout>

            <TableLayout
                android:id="@+id/id_tableLayout_AltitudeDown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:paddingTop="0dp"
                android:paddingBottom="0dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/id_textView_AltitudeDown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:freezesText="true"
                        android:gravity="center_horizontal"
                        android:textAppearance="@style/TextAppearanceLargeNumbers"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id_textView_AltitudeDownUM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="0"
                        android:textAppearance="@style/TextAppearanceLargeUM" />
                </TableRow>

                <TextView
                    android:id="@+id/id_textView_AltitudeDownLabel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/altitude_down"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="13sp" />
            </TableLayout>

            <TableLayout
                android:id="@+id/id_tableLayout_OverallDirection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:paddingTop="0dp"
                android:paddingBottom="0dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/id_textView_OverallDirection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:freezesText="true"
                        android:gravity="center_horizontal"
                        android:textAppearance="@style/TextAppearanceLargeNumbers"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/id_textView_OverallDirectionUM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="0"
                        android:textAppearance="@style/TextAppearanceLargeUM" />
                </TableRow>

                <TextView
                    android:id="@+id/id_textView_OverallDirectionLabel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/overall_direction"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="13sp" />
            </TableLayout>

            <TableLayout
                android:id="@+id/id_tableLayout_Duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner"
                android:baselineAligned="false"
                android:paddingTop="0dp"
                android:paddingBottom="0dp">

                <TextView
                    android:id="@+id/id_textView_Duration"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:freezesText="true"
                    android:gravity="center_horizontal"
                    android:textAppearance="@style/TextAppearanceLargeNumbers"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/id_textView_DurationLabel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/duration"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="13sp" />
            </TableLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/id_textView_TrackStatus"
        android:gravity="center_horizontal"
        android:paddingTop="30dp"
        android:text="@string/track_empty" />

</FrameLayout>
