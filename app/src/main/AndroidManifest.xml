<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.fbradasc.trekking.walkinglogger">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION"/>

    <uses-feature android:name="android.hardware.location.gps" android:required="true" />

    <application
        android:name="org.fbradasc.trekking.walkinglogger.GPSApplication"
        android:requestLegacyExternalStorage="true"
        android:allowBackup="true"
        android:fullBackupContent="@xml/my_backup_rules"
        android:installLocation="internalOnly"
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@mipmap/walking_logger"
        android:label="@string/app_name"
        android:theme="@style/LaunchScreenTheme"
        android:supportsRtl="true">

        <activity android:name="org.fbradasc.trekking.walkinglogger.GPSActivity"
            android:label="@string/app_name"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="org.fbradasc.trekking.walkinglogger.SettingsActivity"
            android:theme="@style/MySettingsTheme"
            android:label="@string/menu_settings"
            android:launchMode="singleTask"
            android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.fbradasc.trekking.walkinglogger.GPSActivity" />
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="org.fbradasc.trekking.walkinglogger.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <receiver android:name="org.fbradasc.trekking.walkinglogger.ActionsBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
            </intent-filter>
        </receiver>

        <service
            android:name="org.fbradasc.trekking.walkinglogger.GPSService"
            android:enabled="true"
            android:foregroundServiceType="location"
            android:exported="false">
            <intent-filter>
                <action android:name="org.fbradasc.trekking.walkinglogger.GPSService" />
            </intent-filter>
        </service>

    </application>

</manifest>
